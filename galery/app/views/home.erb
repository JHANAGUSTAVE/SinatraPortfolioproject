<div class="container pt-5">
    <div class="col-lg-12 col-md-12">
       <!-- <a href="new-picture" class="btn btn-info btn-sm">Add new picture</a>-->
        <div class="d-flex w-100 mt-3">
            <% @user.galeries.each do |pic| %>
                <div class="card w-25 m-3">
                    <div class="card-body">
                        <img src="/<%= pic.name %>" class="img-thumnail w-100" />
                        <p class="card-text"><%= pic.description %></p>
                        
                        <% if Helpers.current_user(session).id == @user.id %>
                          <a href="/edit/galery/<%= pic.id %>" class="btn btn-warning btn-sm float-left">Edit</a>

                           
                            <form action="/users/delete/<%=pic.id%>" method="post" >
                                <input type="hidden"  name="_method" id="hidden"  value="DELETE">
                                <input type="submit" class="btn btn-danger btn-sm float-right" value="Delete">
                            </form>
                        <% end %>
                        

                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
